{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "composite": true,
    "emitDeclarationOnly": true,
    "lib": [
      "esnext"
    ],
    "verbatimModuleSyntax": true,
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./bundle",
    "types": [
      "node"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "tsBuildInfoFile": "./bundle/tsconfig.tsbuildinfo"
  },
  "include": ["./src"]
}