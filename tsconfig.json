{
    "references": [
        {
            "path": "./packages/sdk/tsconfig.json"
        }
    ],
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext"
        ],
        "rootDir": "./",
        "types": [
            "node"
        ],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "grab.config.ts",
        "**/tsdown.config.ts"
    ]
}